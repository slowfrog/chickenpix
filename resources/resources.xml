<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Messages -->
    <section name="messages">
      <const name="top" value="Press arrows to move, [ESC] to quit." />
      <const name="title" value="Chickenpix!!!" />
    </section>

    <!-- Fonts -->
    <section name="fonts">
      <font name="sans_big">
        <freetype file="fonts/BerkshireSwash-Regular.ttf" height="40"
                  anti_alias="true" subpixel="false" />
      </font>
      <font name="sans_small">
        <freetype file="fonts/BerkshireSwash-Regular.ttf" height="11"
                  anti_alias="true" subpixel="true" />
      </font>
    </section>

    <!-- Images -->
    <section name="images">
      <image name="house"><image file="img/house.png"/></image>
      <image name="map"><image file="img/map.png" /></image>
      <image name="pig"><image file="img/cochon.png" /></image>
      <image name="streetboy"><image file="img/garcon_des_rues.png" /></image>
      <image name="wizard"><image file="img/magicien.png" /></image>
      <image name="mayor"><image file="img/maire.png" /></image>
      <image name="princess"><image file="img/princesse.png" /></image>
      <image name="richard"><image file="img/richard.png" /></image>
      <image name="wall"><image file="img/wall.png" /></image>
      <image name="FightMap"><image file="img/FightMap.png"/></image>
    </section>
    
    <!-- Sprites -->
    <section name="sprites">
    <const name="horizontal-speed" value="43" />
    <const name="vertical-speed" value="43" />
    <sprite name="man_walk_up">
      <image file="img/richard_walkcycle.png">
        <grid pos="64,0"
              size="64,64"
              array="8,1" />
      </image>
      <animation loop="yes"
                 speed="100" />
    </sprite>
    <sprite name="man_stand_up">
      <image file="img/richard_walkcycle.png">
        <grid pos="0,0"
              size="64,64"
              array="1,1" />
      </image>
    </sprite>
    <sprite name="man_walk_left">
      <image file="img/richard_walkcycle.png">
        <grid pos="64,64"
              size="64,64"
              array="8,1" />
      </image>
      <animation loop="yes"
                 speed="100" />
    </sprite>
    <sprite name="man_stand_left">
      <image file="img/richard_walkcycle.png">
        <grid pos="0,64"
              size="64,64"
              array="1,1" />
      </image>
    </sprite>
    <sprite name="man_walk_down">
      <image file="img/richard_walkcycle.png">
        <grid pos="64,128"
              size="64,64"
              array="8,1" />
      </image>
      <animation loop="yes"
                 speed="100" />
    </sprite>
    <sprite name="man_stand_down">
      <image file="img/richard_walkcycle.png">
        <grid pos="0,128"
              size="64,64"
              array="1,1" />
      </image>
    </sprite>
    <sprite name="man_walk_right">
      <image file="img/richard_walkcycle.png">
        <grid pos="64,192"
              size="64,64"
              array="8,1" />
      </image>
      <animation loop="yes"
                 speed="100" />
    </sprite>
    <sprite name="man_stand_right">
      <image file="img/richard_walkcycle.png">
        <grid pos="0,192"
              size="64,64"
              array="1,1" />
      </image>
    </sprite>
    <sprite name="man_still">
      <image file="img/male_blur.png">
        <grid pos="0,0"
              size="64,64"
              array="14,1" />
      </image>
      <animation loop="yes"
                 pingpong="yes"
                 speed="100"/>
      <frame nr="0"
             speed="4000" />
      <frame nr="13"
             speed="1000" />
    </sprite>
    <sprite name="gold_coin">
      <image file="img/coin_gold.png">
        <grid pos="0,0" size="32,32" array="8,1" />
      </image>
      <animation loop="yes" speed="100" />
    </sprite>
    <sprite name="barrel">
      <image file="img/barrel.png">
        <grid pos="0,10" size="32,38" array="1,1" />
      </image>
      <animation loop="yes" speed="100" />
    </sprite>
  </section>
  <!-- Audio -->
  <section name="samples">
    <sample name="background_music"><sample file="music/Calmtown.ogg"/></sample>
    <sample name="coin"><sample file="sound/coin.wav"/></sample>
  </section>
</resources>
