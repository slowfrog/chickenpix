<?xml version="1.0" encoding="utf-8"?>
<entities>
    
    <!-- Load resources -->
    <resources>
        <resource kind="image">
            <image path="resources/img/richard.png" alias="richard"/>
        </resource>
        <resource kind="image">
            <image path="resources/img/wall.png" alias="wall"/>
        </resource>
        
        <resource kind="font">
            <image path="resources/fonts/BerkshireSwash-Regular.ttf" alias="sans_big" size="30"/>
        </resource>
        <resource kind="font">
            <image path="resources/fonts/BerkshireSwash-Regular.ttf" alias="sans_small" size="8"/>
        </resource>
        
    </resources>
    
	<!-- create entity -->
    <entity>
      <components>
        <component type="Transform"><position x="400" y="300" /></component>
        <component type="Camera"
                   offsetX="0" offsetY="0"
                   width="800" height="600" />
        <component type="Scriptable"><script name="menu" /></component>
        <component type="Input" />
      </components>
    </entity>
    <entity>
        <tags><tag name="POINTER"></tag></tags>
        <components>
            <component type="Transform"><position x="250" y="170"/></component>
            <component type="Resources" kind="font" z-order="99">
                <text>&gt;&gt;</text>
                <police name="sans_big"/>
            </component>
        </components>
    </entity>
    <entity>
        <tags>
            <tag name="START"></tag>
            <tag name="SELECTED"></tag>
		</tags>
        <components>
            <component type="Transform">
                <position x="300" y="170"/>
            </component>
            <component type="Resources" kind="font" z-order="99">
                <text>Start Game</text>
                <police name="sans_big"/>
            </component>
        </components>
    </entity>
    <entity>
        <tags>
            <tag name="QUIT"></tag>
		</tags>
        <components>
            <component type="Transform">
                <position x="300" y="270"/>
            </component>
            <component type="Resources" kind="font" z-order="99">
                <text>Quit Game</text>
                <police name="sans_big"/>
                <color r="255" g="255" b="0" a="128"/>
            </component>
        </components>
    </entity>
    <entity>
        <tags>
            <tag name="CREDITS"></tag>
		</tags>
        <components>
            <component type="Transform">
                <position x="300" y="370"/>
            </component>
            <component type="Resources" kind="font" z-order="99">
                <text>Credits</text>
                <police name="sans_big"/>
                <color r="255" g="255" b="0" a="128"/>
            </component>
        </components>
    </entity>
    
</entities>