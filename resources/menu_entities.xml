<?xml version="1.0" encoding="utf-8"?>
<entities>
    
	<!-- create entity -->
    <entity>
      <components>
        <component type="Transform"><position x="400" y="300" /></component>
        <component type="Camera"
                   offsetX="0" offsetY="0"
                   width="800" height="600" />
        <component type="Scriptable"><script name="menu" /></component>
        <component type="Input" />
      </components>
    </entity>
    <entity>
        <components>
            <component type="Transform">
                <position x="250" y="30"/>
            </component>
            <component type="Resources" kind="font" z-order="99">
                <text>Chickenpix</text>
                <police name="sans_huge"/>
                <color r="255" g="150" b="0" a="255" />
            </component>
        </components>
    </entity>
    <entity>
        <tags><tag name="POINTER"></tag></tags>
        <components>
            <component type="Transform"><position x="250" y="200"/></component>
            <component type="Resources" kind="font" z-order="99">
                <text>&gt;&gt;</text>
                <police name="sans_big"/>
            </component>
        </components>
    </entity>
    <entity>
        <tags>
            <tag name="START"></tag>
            <tag name="SELECTED"></tag>
		</tags>
        <components>
            <component type="Transform">
                <position x="300" y="200"/>
            </component>
            <component type="Resources" kind="font" z-order="99">
                <text>Start Game</text>
                <police name="sans_big"/>
            </component>
            <component type="Controller" name="ButtonController" />
        </components>
    </entity>
    <entity>
        <tags>
            <tag name="QUIT"></tag>
		</tags>
        <components>
            <component type="Transform">
                <position x="300" y="300"/>
            </component>
            <component type="Resources" kind="font" z-order="99">
                <text>Quit Game</text>
                <police name="sans_big"/>
                <color r="255" g="255" b="0" a="128"/>
            </component>
            <component type="Controller" name="ButtonController" />
        </components>
    </entity>
    <entity>
        <tags>
            <tag name="CREDITS"></tag>
		</tags>
        <components>
            <component type="Transform">
                <position x="300" y="400"/>
            </component>
            <component type="Resources" kind="font" z-order="99">
                <text>Credits</text>
                <police name="sans_big"/>
                <color r="255" g="255" b="0" a="128"/>
            </component>
            <component type="Controller" name="ButtonController" />
        </components>
    </entity>
    
</entities>